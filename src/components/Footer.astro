---
import { ArrowRight, RceLogo } from "./icons";
import { Input } from "@/components/ui/input";
import { Button } from "@/components/ui/button";
---

<footer class="container mx-auto px-4">
  <div class="py-4 md:grid grid-cols-12">
    <div class="bg-[#203C860D] px-9 py-5 md:col-span-4 order-2">
      <h5 class="uppercase font-bold">Subscribe</h5>
      <div class="mt-4 mb-3 flex">
        <Input placeholder="Email address" />
        <Button size={"icon"} variant={"secondary"} className="cursor-pointer"
          ><ArrowRight /></Button
        >
      </div>
      <span class="text-sm text-[rgba(18,37,62,0.6)]">
        Subscribe to get important updates about RCE over to your Email.
      </span>
    </div>

    <div class="gap-y-5 py-5 md:col-span-8 flex flex-wrap md:py-0">
      <div class="flex-1/3 sm:flex-1/4 uppercase">
        <h6 class="text-[#12253E] font-bold mb-3">Sitemap</h6>
        <ul class="text-[rgba(18,37,62,0.6)]">
          <li>Home</li>
          <li>Services</li>
          <li>Portfolio</li>
        </ul>
      </div>
      <div class="flex-1/2 sm:flex-1/3 uppercase">
        <h6 class="text-[#12253E] font-bold mb-3">Privacy Policy</h6>
        <ul class="text-[rgba(18,37,62,0.6)]">
          <li>Terms & Conditions</li>
          <li>Privacy Policy</li>
          <li>Cookie Policy</li>
        </ul>
      </div>
      <div class="flex-1/3">
        <h6 class="text-[#12253E] font-bold uppercase mb-3">Contact</h6>
        <ul class="text-[rgba(18,37,62,0.6)]">
          <!-- <li>no.</li> -->
          <!-- <li>no.</li> -->
          <li>info@email.com</li>
        </ul>
      </div>
    </div>
  </div>

  <div class="pt-10">
    <div>
      <div class="border-b border-b-gray-300 pb-5 mb-5">
        <RceLogo />
      </div>
    </div>
    <p class="text-center text-[#12253EB2]">
      Copyright RCE Consultants. All Rights Reserved.
    </p>
  </div>
</footer>
